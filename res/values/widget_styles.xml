<resources>

	<!-- Widget stuff -->
	<style name="widget_w1_CommandBar">
		<item name="android:background">@drawable/widget_w1_command_bar_background</item>
	</style>

	<style name="widget_w1_TaskBar">
		<item name="android:background">@drawable/widget_w1_task_bar_background</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="widget_w1_TaskText">
		<item name="android:shadowColor">@color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">3</item>
		<item name="android:textAppearance">@style/widget_w1_TextAppearance</item>
	</style>


	<style name="widget_w1_TextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/white</item>
	</style>

</resources>
